<Window x:Class="DoorSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoorSimulator"
        mc:Ignorable="d"
        Title="Door Simulator" Height="200" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Window.Resources>
        <!--UI Proerty-->
        <LinearGradientBrush x:Key="RedLightOn" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="Pink" Offset="0"/>
            <GradientStop Color="Red" Offset="0.5"/>
            <GradientStop Color="DarkRed" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GreenLightOn" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="LightGreen" Offset="0"/>
            <GradientStop Color="Green" Offset="0.5"/>
            <GradientStop Color="DarkGreen" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="YellowLightOn" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="LightYellow" Offset="0"/>
            <GradientStop Color="Yellow" Offset="0.5"/>
            <GradientStop Color="YellowGreen" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GrayButton" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="LightGray" Offset="0"/>
            <GradientStop Color="Gray" Offset="0.5"/>
            <GradientStop Color="DarkGray" Offset="1"/>
        </LinearGradientBrush>
        <!--Style-->
        <Style x:Key="SettingsLabel" TargetType="Label">            
            <Setter Property="Foreground" Value="DarkBlue"/>            
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>            
        </Style>
        <Style x:Key="SettingsLabelUnit" TargetType="Label">
            <Setter Property="Foreground" Value="DarkBlue"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style>
        <Style x:Key="SettingsTextBox" TargetType="TextBox">            
            <Setter Property="Foreground" Value="DarkBlue"/>            
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>        
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <Expander x:Name="expdr" IsEnabled="true" DockPanel.Dock="Top" Margin="5">
            <Expander.Header>
                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="30*"/>
                        <ColumnDefinition Width="40*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Margin="2,0" Source="Resources\Settings.ico"  
                           VerticalAlignment="Center" HorizontalAlignment="Right" Stretch="None" />
                    <Label Grid.Column="1" Grid.ColumnSpan="2"   
                           VerticalAlignment="Center" HorizontalAlignment="Left" VerticalContentAlignment="Center"  
                           Content="Settings"/>
                </Grid>
            </Expander.Header>
            <Border BorderBrush="Black" BorderThickness="0.5" Margin="2,2" Padding="0,5,0,5">
                <Grid Margin="2,0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="25*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Margin="0,0,0,2" Content="Port" Style="{StaticResource ResourceKey=SettingsLabel}" />
                    <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,2" Style="{StaticResource ResourceKey=SettingsTextBox}" />
                    <Label Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Margin="0,0,0,2" Content="( localhost::8001 )" Style="{StaticResource ResourceKey=SettingsLabelUnit}" />
                    <Label Grid.Row="1" Grid.Column="0" Margin="0,2,0,2" Content="Cycle Time" Style="{StaticResource ResourceKey=SettingsLabel}" />
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="0,2,0,2" Style="{StaticResource ResourceKey=SettingsTextBox}"/>
                    <Label Grid.Row="1" Grid.Column="2" Margin="0,0,0,2" Content="ms" Style="{StaticResource ResourceKey=SettingsLabelUnit}" />
                    <Label Grid.Row="2" Grid.Column="0" Margin="0,2,0,2" Content="Sending MSG" Style="{StaticResource ResourceKey=SettingsLabel}" />
                    <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,2,0,2" Style="{StaticResource ResourceKey=SettingsTextBox}"/>
                    <Label Grid.Row="3" Grid.Column="0" Margin="0,2,0,0" Content="Receiving MSG" Style="{StaticResource ResourceKey=SettingsLabel}" />
                    <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,2,0,0" Style="{StaticResource ResourceKey=SettingsTextBox}"/>
                    <Button Content="OK" Grid.Row="1" Grid.Column="3" Grid.RowSpan="3" Background="{StaticResource GreenLightOn}" FontWeight="Bold" 
                            FontSize="15" Foreground="White" Margin="5,2,5,0" />
                </Grid>
            </Border>
        </Expander>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="5,0,5,5"
                    HorizontalAlignment="Right" VerticalAlignment="Center" >
            <Button Content="Start" Padding="10, 5" Width="80" />
            <Button Content="Stop" Padding="10,5" Margin="10,0,0,0" Width="80"/>
        </StackPanel>
        <GroupBox Margin="5,5,5,10" Header="Door Selection" BorderBrush="Black" BorderThickness="1" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <CheckBox Content="Chamber1 Door" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
                <CheckBox Content="Chamber2 Door" Margin="20,0,0,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
            </StackPanel>            
        </GroupBox>
    </DockPanel>
</Window>
